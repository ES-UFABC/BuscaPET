<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".TelaAnimais">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:background="@color/secondary"
        android:layout_height="?android:actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/animal_barra"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Animais"
            android:textSize="24sp"/>

       </android.support.design.widget.AppBarLayout>

    <android.support.design.card.MaterialCardView
        android:id="@+id/cartao"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_centerInParent="true"
        app:layout_constraintTop_toBottomOf="@+id/animal_barra"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/caixa_de_texto">

            <TextView
                android:id="@+id/Animal_nome"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                android:text="@string/tipo_animal"
                android:textColor="@color/black"
                android:weightSum="2"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/animal_image"
                />

            <TextView
                android:id="@+id/Animal_cidade"
                android:layout_width="140dp"
                android:layout_height="20dp"
                android:layout_marginStart="240dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:text="@string/cidade"
                android:textColor="@color/black"
                android:weightSum="2"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/Animal_nome"
                />
            <TextView
                android:id="@+id/Animal_estado"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:text="@string/estado"
                android:textColor="@color/black"
                android:weightSum="2"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/Animal_nome"
                />
            <TextView
                android:id="@+id/Animal_endereco"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:text="@string/endereco"
                android:textColor="@color/black"
                android:weightSum="2"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/Animal_nome"
                />
            <TextView
                android:id="@+id/Animal_descricao"
                android:layout_width="200dp"
                android:layout_height="85dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:text="@string/descricao"
                android:textColor="@color/black"
                android:weightSum="2"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/Animal_nome"
                />
            <TextView
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="210dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:text="Acolhido"
                android:textColor="@color/black"
                android:weightSum="2"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/Animal_nome"
                />
            <TextView
                android:id="@+id/Animal_acolhido"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginStart="260dp"
                android:layout_marginTop="210dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:text="@string/acolhido"
                android:textColor="@color/black"
                android:weightSum="2"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/Animal_nome"
                />

            <ImageView
                android:layout_marginStart="10dp"
                android:id="@+id/animal_image"
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/logo"
                android:layout_margin="15dp"
                app:layout_constraintLeft_toLeftOf="parent"/>

        </RelativeLayout>
        </android.support.design.card.MaterialCardView>
    </RelativeLayout>
